{
  "name": "mercii-backend",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "node src/bin/www",
    "dev": "nodemon ./src/bin/www",
    "build": "cd ../mercii-admin && npm install && npm run build && xcopy build \"../Mercii-Backend/public\" /E /I /Y",
    "lint": "eslint --ignore-path .gitignore .",
    "format": "prettier --write \"src/**/*.js\"",
    "db:create": "npx sequelize-cli db:create",
    "db:reset": "npx sequelize-cli db:drop && npx sequelize-cli db:create && npx sequelize-cli db:migrate",
    "create:seed": "npx sequelize-cli seed:generate --name",
    "db:migrate": "npx sequelize-cli db:migrate",
    "db:migrate:undo": "npx sequelize-cli db:migrate:undo",
    "db:seed": "npx sequelize-cli db:seed:all",
    "seed:add-iban": "node src/seeds/add_iban_to_usi.js",
    "seed:admin": "node src/seeders/admin-data.js"
  },
  "dependencies": {
    "@sendgrid/mail": "^8.1.3",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "cheerio": "^1.1.2",
    "cookie-parser": "~1.4.6",
    "cookie-session": "^2.1.0",
    "cors": "^2.8.5",
    "debug": "~4.3.5",
    "dotenv": "^16.4.5",
    "eslint": "^9.4.0",
    "express": "^4.19.2",
    "express-fileupload": "^1.5.0",
    "express-rate-limit": "^8.0.1",
    "express-session": "^1.18.0",
    "firebase-admin": "^13.4.0",
    "helmet": "^8.1.0",
    "http-errors": "~2.0.0",
    "http-proxy-middleware": "^3.0.0",
    "http-status": "^1.7.4",
    "joi": "^17.13.1",
    "joi-phone-number": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "node-cron": "^3.0.3",
    "passport": "^0.7.0",
    "passport-apple": "^2.0.2",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.12.0",
    "pg-hstore": "^2.3.4",
    "puppeteer": "^24.21.0",
    "qrcode": "^1.5.4",
    "sequelize": "^6.37.3",
    "speakeasy": "^2.0.0",
    "twilio": "^5.8.0",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "eslint": "^9.4.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "nodemon": "^3.1.3",
    "prettier": "^3.3.1",
    "sequelize-cli": "^6.6.2"
  }
}
